# This service executes the backend_mtr.sh script located at /etc/scripts
# Should be run after backend.service

[Unit]
Description= Monitoring script for backend
Requires=weston@root.service
After=backend.service

[Service]
Type=idle
ExecStart=/etc/scripts/backend-mtr.sh
Restart=on-success
RestartSec=1

[Install]
WantedBy=multi-user.target
